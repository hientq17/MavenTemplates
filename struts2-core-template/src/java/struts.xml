    <package name="default" extends="struts-default">
        <action name="home" class="edu.fpt.action.NavigationAction" method="home">
            <result name="success">views/home.jsp</result>
        </action>
        <action name="menu" class="edu.fpt.action.NavigationAction" method="menu">
            <result name="success">views/menu.jsp</result>
        </action>
        <action name="about" class="edu.fpt.action.NavigationAction" method="about">
            <result name="success">views/about.jsp</result>
        </action>
        <action name="food" class="edu.fpt.action.NavigationAction" method="food">
            <result name="success">views/food.jsp</result>
        </action>
